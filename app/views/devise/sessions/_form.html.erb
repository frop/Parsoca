<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal well" } ) do |f| %>
<%= field_set_tag do %>
  <%= devise_error_messages! %>
  
  <div class="control-group">
    <%= f.label :email, :class => "control-label" %>
    <div class="controls">
      <%= f.email_field :email, :class => "input-xlarge" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, :class => "control-label" %>
    <div class="controls">
      <%= f.password_field :password, :class => "input-xlarge" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <label class="checkbox">
      <%= f.check_box :remember_me %>
      Remember me
    </label>
  <% end -%>

  <div class="form-actions"><%= f.submit "Sign in", :class => "btn btn-primary" %></div>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<% end %>
<% end %>

