<%= form_for(@time_bank, :html => { :class => "form-horizontal" } ) do |f| %>
<%= field_set_tag do %>
  <% if @time_bank.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@time_bank.errors.count, "error") %> prohibited this time_bank from being saved:</h2>

      <ul>
      <% @time_bank.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :base, "Current time bank", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :base, :placeholder => "HH:MM" %>
      <span class="help-inline">How much time is there in your time bank right now? Negative values are accepted.</span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :daily_hours, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :daily_hours, :placeholder => "HH:MM" %>
    </div>
  </div>
  <div class="form-actions"><%= f.submit "Save", :class => "btn btn-primary" %></div>
<% end %>
<% end %>
